load("@build_bazel_rules_nodejs//:index.bzl", "nodejs_binary")

package(default_visibility = ["//visibility:public"])

nodejs_binary(
    name = "protoc_gen_ts",
    entry_point = "index.js",
    data = [
        "@protoc_gen_ts_deps//typescript",
        "@protoc_gen_ts_deps//google-protobuf"
    ]
)

filegroup(
    name = "package_contents",
    srcs = [
        "bin/protoc-gen-ts",
        "WORKSPACE",
        "index.bzl",
        "package.json",
        "index.js"
    ]
)